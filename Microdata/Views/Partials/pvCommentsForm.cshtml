@inherits UmbracoViewPage<Microdata.Models.CommentsModel>

<div class="container">
    <div>
        <div class="row">
            <div class="col-md-4">
                @using (Html.BeginUmbracoForm("CommentsForm", "Home", new { FormMethod.Post }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "")
                    @TempData["Message"]
  
                    <div class="form-group">
                        @Html.LabelFor(x => x.MessageTitle)
                        @Html.TextBoxFor(x => x.MessageTitle, new { @class = "form-control", PlaceHolder = "Title" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.VisitorMessage)
                        @Html.TextAreaFor(x => x.VisitorMessage, 10, 50, new { @class = "form-control", PlaceHolder = "Message" })
                    </div>
                   
                        <div class="form-group">
 
                            <button class="btn btn-primary" type="Submit">Post Comment</button>
                        </div>
                }
            </div>
        </div>
    </div>
</div>


